@model PatientNoteBackAPI.Models.InputModels.NoteInputModel

@{
    ViewData["Title"] = "Création d'une Note";
}

<h2>@ViewData["Title"]</h2>

@{
    var patientId = TempData["PatientId"];
    if (patientId == null)
    {
        patientId = 0;
    }
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId" class="control-label">Identifiant Patient</label>
        <input asp-for="PatientId" class="form-control" value="@patientId"/>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NoteContent" class="control-label">Note</label>
        <textarea asp-for="NoteContent" class="form-control"></textarea>
        <span asp-validation-for="NoteContent" class="text-danger"></span>
    </div>
    <div class="form-group mt-1">
        <input type="submit" value="Créer la Note" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="PatientNote" asp-route-Id="@patientId" class="btn btn-secondary">Retour à la liste des Notes du Patient</a>
</div>
