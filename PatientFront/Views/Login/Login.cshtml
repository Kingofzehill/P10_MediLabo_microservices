@model PatientBackAPI.Models.LoginModel
@{
    ViewData["Title"] = "Authentification";
}

<h2>Authentification</h2>

<form asp-action="Login" method="post">
@*<form asp-controller="Authentication" asp-action="Index" method="post">    *@
    <div class="form-group">
        <label asp-for="Username">Utilisateur</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Mot de passe</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Se connecter</button>
</form>